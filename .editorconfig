# EditorConfig: http://EditorConfig.org
# Also see https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties

# Some defaults for every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.md,gitcommit,*.txt]
max_line_length = 72

# autopep8 uses 4 space indentation
[*.py]
indent_size = 4
indent_style = space
tab_width = 4
